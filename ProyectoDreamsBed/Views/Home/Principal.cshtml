
@{
    ViewBag.Title = "Principal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>Principal</title>
</head>
<body>
    <div class="jumbotron" style="text-align:center;">
        <h1>DreamsBed</h1>
        <div class="container">
            <div class="col-sm-8">
                <!-- CAROUSEL -->
                <div id="carouselPrincipal" class="carousel slide" data-ride="carousel">
                    <!-- Indicadores -->
                    <ol class="carousel-indicators">
                        <li data-target="#carouselPrincipal" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselPrincipal" data-slide-to="1"></li>
                        <li data-target="#carouselPrincipal" data-slide-to="2"></li>
                    </ol>

                    <!-- Capas -->
                    <div class="carousel-inner">
                        <div class="item active">
                            <a href='@Url.Action("Producto", "Home", new { name = "Litera1.gif", id="Litera1" })'>
                                <img src='~/Content/Images/litera1.gif' alt='Litera1' >
                            </a>
                        </div>

                        <div class="item">
                            <a href='@Url.Action("Producto", "Home", new { name = "LiteraVerde.jpg", id="LiteraVerde" })'>
                                <img src="~/Content/Images/LiteraVerde.jpg" alt="Litera2">
                            </a>
                        </div>

                        <div class="item">
                            <a href='@Url.Action("Producto", "Home", new { name = "Litera3.gifg", id="Litera3" })'>
                                <img src="~/Content/Images/Litera3.gif" alt="Litera3">
                            </a>
                        </div>
                    </div>

                    <!-- Controles a derecha e izquierda -->
                    <a class="left carousel-control" href="#carouselPrincipal" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#carouselPrincipal" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
                <!---->

                <!-- Buscador -->
                <!---->
            </div>
            <div class="col-sm-4">
                @if (Session["Usuario"] != null)
                {
                    <p>Aquí irá publicidad</p>
                }
                else
                {
                    <iframe src="@Url.Action("RegistroFrame", "Registro")" style="width:100%; height:700px"></iframe>
                }

            </div>
        </div>
    </div>
    <span>HOLA</span>
</body>
</html>

