@model ProyectoDreamsBed.Models.CrearJson

@{
    ViewBag.Title = "Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string datos = ViewData["DatosProducto"].ToString();
}

<h2>@ViewBag.Titulo</h2>
<img src="~/Content/Images/@ViewBag.Name"/><br /><br />
<div class="form-group">
    <label>Altura: </label>
    <input type="number" value="150"/>cm
</div>

<div class="form-group">
    <label>Largo: </label>
    <input type="number" value="150" />cm
</div>

<div class="form-group">
    <label>Ancho: </label>
    <input type="number" value="150" />cm
</div>

<div>
    @{
        for(int i =0; i<datos.Length; i++)
        {
            <p>@datos[i]</p>
        }
    }
</div>
